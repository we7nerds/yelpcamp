<% include ../partials/header %>
    
<div class="row">

    <h1 style="text-align: center;">Edit Comment</h1>
    
    <div style="width:30%; margin: 25px auto;">

        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            
            <div class="form-group">
                <label for="comment[text]">Comment</label>
                <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
            </div>
            
            <div class="form-group">
                <input class="btn btn-lrg btn-primary btn-block" type="submit">
            </div>
            
        </form>
        
        <a href="/campgrounds/<%= campground_id %>">Go Back</a>

    </div>

</div>


<% include ../partials/footer %>