<% include ../partials/header %>

<div class="row">

    <h1 style="text-align: center;">Edit <%= campground.name %> Campground</h1>
    
    <div style="width:30%; margin: 25px auto;">

        <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
            
            <div class="form-group">
                <label class="" for="campground[name]">Name</label>
                <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
            </div>
            
            <div class="form-group">
                <label class="" for="campground[price]">Price Per Night (USD)</label>
                <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01">
            </div>
            
            <div class="form-group">
                <label class="" for="campground[location]">City and State</label>
                <input class="form-control" type="text" id="location" value="<%= campground.location %>" name="campground[location]">
            </div>
            
            <div class="form-group">
                <label class="" for="campground[image]">Image</label>
                <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]">
            </div>
            
            <div class="form-group">
                <label class="" for="campground[description]">Description</label>
                <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]">
            </div>
            
            <div class="form-group">
                <input class="btn btn-lrg btn-primary btn-block" type="submit" value="Save Changes">
            </div>
            
        </form>
        
        <a href="/campgrounds">Go Back</a>

    </div>

</div>


<% include ../partials/footer %>